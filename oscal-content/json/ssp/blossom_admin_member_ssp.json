      "roles" : [ {
        "id" : "system-owner",
        "title" : "System Owner (SO)",
        "description" : "The individual within the organization who is ultimately accountable for everything related to the deployment, assessemnt, authorization and operations of the Blossom Member which provides the software assets leasing service (here in known as \"this system\")."
      }, {
        "id" : "license-owner",
        "title" : "License Owner (LO)",
        "description" : "The individual within the service provider organization who is accountable for managing the pool of software resources made available for leasing to USG agencies.\n\nThe License Owner role exists only within the service provider agency."
      }, {
        "id" : "authorizing-official",
        "title" : "Authorizing Official",
        "description" : "The individual or individuals who are ultimatly accountable for reviewing the assessemnt package, discuss with the SO the findings and grant an authorization to operate (ATO) to \"this system\".\n\nThe Authorizing Official is the only entity responsible for the security posture of the system that gets access to the ATO channel (chainecode). The AO signs the MOU on behalf of the agency."
      }, {
        "id" : "sys-sec-assessor",
        "title" : "System Security Assessor (SSA)",
        "description" : "The individual accountable for assessing the security posture of the system on behalf of the system owner."
      }, {
        "id" : "tpoc",
        "title" : "Technical Point of Contact (TPOC)",
        "description" : "The individual accountable for managing leased licenses (checkout, install, uninstall, return)."
      }, {
        "id" : "system-administrator",
        "title" : "System Administrator (SA)",
        "description" : "The individual accountable for the deployment, configuration, testing and operations of the system on behalf of the System Owner."
      } ],
